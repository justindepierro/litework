{
  "name": "litework",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3000 --turbopack",
    "dev:stable": "./scripts/dev/dev-server-stable.sh",
    "dev:restart": "./scripts/dev/dev-restart.sh",
    "dev:kill": "pkill -f 'next dev' || lsof -ti:3000 | xargs kill -9 2>/dev/null || true",
    "dev:clean": "rm -rf .next && npm run dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings=0",
    "test": "vitest run",
    "test:watch": "vitest",
    "deploy": "./scripts/deployment/deploy.sh",
    "deploy:verify": "node ./scripts/deployment/deploy-verify.mjs",
    "clean": "rm -rf .next && rm -rf node_modules/.cache",
    "analyze": "ANALYZE=true npm run build",
    "lighthouse": "lighthouse http://localhost:3000 --view --output-path=./docs/reports/lighthouse-report.html",
    "analyze:server": "BUNDLE_ANALYZE=server npm run analyze",
    "analyze:browser": "BUNDLE_ANALYZE=browser npm run analyze",
    "cleanup:imports": "./scripts/dev/cleanup-unused-imports.sh",
    "cleanup:codebase": "./scripts/dev/cleanup-codebase.sh",
    "audit:contrast": "node ./scripts/analysis/contrast-audit.mjs",
    "generate:tokens": "node scripts/dev/generate-tokens.mjs"
  },
  "dependencies": {
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource/poppins": "^5.2.7",
    "@marsidev/react-turnstile": "^1.3.1",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.77.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "cmdk": "^1.1.1",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.24",
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.548.0",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "19.2.0",
    "recharts": "^3.3.0",
    "resend": "^6.4.0",
    "swr": "^2.3.6",
    "web-push": "^3.6.7",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.0.3",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/web-push": "^3.6.4",
    "chalk": "^5.3.0",
    "critters": "^0.0.23",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "sharp": "^0.34.4",
    "tailwindcss": "^4",
    "terser-webpack-plugin": "^5.3.14",
    "typescript": "^5",
    "vitest": "^4.0.10"
  }
}
