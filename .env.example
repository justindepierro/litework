# LiteWork Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# SUPABASE CONFIGURATION (REQUIRED)
# ============================================
# Get these from your Supabase project settings
# https://app.supabase.com/project/_/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# EMAIL SERVICE (REQUIRED FOR INVITES)
# ============================================
# Resend API Key - Get from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# From email address (must be verified domain in Resend)
FROM_EMAIL=LiteWork <noreply@yourdomain.com>

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Environment (development, production, test)
NODE_ENV=development

# Base URL of your application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# AUTHENTICATION
# ============================================

# JWT secret for session encryption (generate a strong random string)
# You can use: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-here

# ============================================
# FEATURE FLAGS (OPTIONAL)
# ============================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# ============================================
# DEVELOPMENT TOOLS (OPTIONAL)
# ============================================

# Enable debug logging in development
DEBUG=false

# Enable performance monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# ============================================
# PRODUCTION SETTINGS (OPTIONAL)
# ============================================

# Sentry DSN for error tracking (production)
# SENTRY_DSN=https://your-sentry-dsn

# Analytics tracking ID (production)
# NEXT_PUBLIC_GA_TRACKING_ID=UA-XXXXXXXXX-X

# ============================================
# RATE LIMITING (OPTIONAL)
# ============================================

# Rate limit settings
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# DATABASE (MANAGED BY SUPABASE)
# ============================================
# No additional configuration needed - Supabase handles this
# Connection pooling and RLS are managed through Supabase dashboard

# ============================================
# NOTES
# ============================================
# - Never commit .env.local to version control
# - Keep SUPABASE_SERVICE_ROLE_KEY secret (full database access)
# - Use different keys for development and production
# - Rotate keys periodically for security
